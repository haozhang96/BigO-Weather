<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_alignStart="@+id/Daily_Weather"
        android:layout_alignLeft="@+id/Daily_Weather"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-186dp"
        android:layout_marginLeft="-186dp"
        android:layout_marginTop="-25dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/cirrus" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:text="Greensboro, NC"
        android:textColor="@color/night_blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Current_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/current_weather"
        android:textColor="@color/night_blue"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Hourly_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@id/Current_Weather"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/hourly_weather"
        android:textColor="@color/night_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Daily_Weather"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@+id/cityName"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@+id/Hourly_Weather"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/daily_weather"
        android:textColor="@color/night_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@id/Daily_Weather"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/map_view"
        android:textColor="@color/night_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/settings"
        android:textColor="@color/night_blue"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="334dp"
        android:layout_height="413dp"
        android:layout_alignEnd="@+id/Current_Weather"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="-264dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>