<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.CurrentWeather"
    android:background="@color/night_blue">



    <ImageView
        android:id="@+id/cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-800dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/clouds" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:text="Greensboro, NC"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Current_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/current_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Hourly_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/hourly_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Daily_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="170dp"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/daily_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Map_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="240dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/map_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="340dp"
        android:layout_height="287dp"
        android:layout_above="@+id/pressure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-220dp"
        app:srcCompat="@color/dark_blue" />


    <TextView
        android:id="@+id/current_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignTop="@+id/imageView5"
        android:text="CURRENT"
        android:textColor="@color/aqua" />

    <TextView
        android:id="@+id/degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:text="70"
        android:textColor="@color/white"
        android:textSize="50dp" />


    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/degrees"
        android:text="PRESSURE:"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure"
        android:layout_marginLeft="100dp"
        android:text="HUMIDITY:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidity"
        android:layout_marginLeft="100dp"
        android:text="WIND SPEED:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sun_rise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wind_speed"
        android:layout_marginLeft="100dp"
        android:text="SUN RISE:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sun_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_rise"
        android:layout_marginLeft="100dp"
        android:text="SUN SET:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sun_set"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:text="LAST UPDATED"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700dp"
        android:ems="10"
        android:hint="Enter Zip Code"
        android:inputType="number"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="500dp"
        android:layout_marginLeft="280dp"
        android:layout_above="@+id/degrees"
        android:background="@color/Transparent"
        android:contentDescription="TODO"
        android:src="@drawable/cloud" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="223dp"
        android:layout_marginTop="565dp"
        android:layout_toEndOf="@+id/Current_Tab"
        android:onClick="Navigation"
        android:text="MAP TEST" />
</RelativeLayout>