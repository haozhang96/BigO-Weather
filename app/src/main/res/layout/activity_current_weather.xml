<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentWeather">


    <TextView
        android:id="@+id/Current_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20pt"
        android:text="@string/current_weather"
        android:onClick="Navigation"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/Hourly_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="Navigation"
        android:text="@string/hourly_weather"
        android:textColor="@color/colorAccent"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/Daily_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="Navigation"
        android:text="@string/daily_weather"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/Hourly_Weather" />

    <Button
        android:id="@+id/Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="Navigation"
        android:text="@string/map_view"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/Daily_Weather" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="Navigation"
        android:text="@string/settings"
        android:textColor="@color/design_default_color_primary"
        android:layout_alignParentRight="true" />


</RelativeLayout>