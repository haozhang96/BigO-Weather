<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/night_blue"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-800dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/clouds" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:text="Greensboro, NC"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Current_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/current_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <Button
        android:id="@+id/Hourly_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/hourly_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Daily_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="170dp"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/daily_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Map_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="240dp"
        android:background="@color/Transparent"
        android:onClick="Navigation"
        android:text="@string/map_tab"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="Navigation"
        android:background="@color/Transparent"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textStyle="bold" />
    
</RelativeLayout>